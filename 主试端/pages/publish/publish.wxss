/* pages/publish/publish.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

page {
  background-color: white !important;
}
.form {
  width: 98%;
  margin-left: 1%;
  margin-top: 30rpx;
}
.bottom_btn{
  width: 100%;
  background-color: white;
  height: 100rpx;
}
.confirm {
  width: 600rpx !important;
  background-color: #3283dd;
  font-size: 30rpx;
  border-radius: 44rpx;
  color: white;
  margin-top: 14rpx;
}

.reward {
  display: flex;
  width: 90%;
  margin-left: 4%;
  margin-top: 20rpx;
}
.reward view{
  margin-left: 130rpx;
  display: flex;
}
.reward input {
  width: 120rpx;
}

.or {
  margin: auto 0;
  margin-right: 20rpx;
  font-size: 30rpx;
  color: #707070;
}

.gettpye {
  z-index: 2;
}
.gettpye .selected{
  color: #3283dd !important;
}
.mylabels{
  display: flex;
width: 95%;
margin-left: 4%;
margin-top: 10rpx;
}
.mylabel {
  display: flex;
  flex-wrap: wrap;
  min-height: 120rpx;
}
.mylabel_title{
  width: 17%;
}

.label {
  color: #3283dd;
  font-size: 24rpx;
  flex-shrink: 0;
  height: 42rpx;
  border-radius: 8rpx;
  border: 1rpx solid;
  margin: 18rpx 14rpx;
  text-align: center;
  line-height: 42rpx;
  width: 170rpx;
}
