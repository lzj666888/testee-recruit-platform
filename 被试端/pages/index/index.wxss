.top{
  width: 100%;
  height: 270rpx;
  background-color: #3283dd;
  border-radius: 0 0 46rpx 46rpx;
  position: relative;
}
.custom-class{
  font-size: 4rpx;
}
@keyframes mymove
{
	from {right:0px;}
	to {right:450px;}
}
/* 标题 */
.tittle{
  font-style:italic;
  font-size: 58rpx;
  font-weight: bold;
  color: white;
  margin-left: 40rpx;
  position: absolute;
  top: 30rpx;
  left: 50rpx;
}
/* 搜索框 */
.top .search{
  width: 80%;
  margin-left: 10%;
  position: absolute;
  top: 140rpx;
}
.input-class{
  height: 43rpx;
}
.function{
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}
.fbox{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.fbox image{
  width: 80rpx;
  height: 80rpx;
}
.fbox text{
  font-size: 20rpx;
  margin-top: 4rpx;
  color: #808080;
}
.choose{
  border-bottom: 2rpx solid #e5e5e5;
  /* margin-top: 10rpx; */
}
/* 实验模块 */
.experiments{
  width: 96%;
  margin-left: 2%;
  display: flex;
  /* border-top: #e5e5e5 solid 4rpx; */
  box-shadow: 0rpx 0rpx 18rpx 10rpx #e6e6e6;
  margin-top: 30rpx;
  border-radius: 24rpx;
  /* height: 300rpx; */
  padding: 10rpx 0;
}

.left{
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
  position: relative;
  top: 30rpx;
}
/* 标签 */
.lable{
  font-size: 20rpx;
  color: #136cf1;
  background-color: #cfe1f5;
  border-radius: 14rpx;
  text-align: center;
  font-weight: bold;
  width: 100rpx;
  height: 30rpx;
  margin: 10rpx;
  line-height: 30rpx;
  position: relative;
  top: -8rpx;
}
.name{
  font-size: 24rpx;
  color: #808080;
  position: relative;
  top: 16rpx;
}
.center .testname{
  font-size: 36rpx;
  font-weight: bold;
}
.center{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin: 20rpx;
}
.center text{
  font-size: 22rpx;
  margin: 8rpx 0;
}
.right{
  display: flex;
  flex-direction: column;
  width: 40%;
  justify-content: flex-end;
  margin: 10rpx 0;
}
.right text{
  font-size: 18rpx;
  color: #808080;
  margin-bottom: 8rpx;
}